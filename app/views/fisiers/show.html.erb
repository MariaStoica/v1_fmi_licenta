	<% else %>
		<li><a href="/capitols/<%= @fisier.capitol_id %>"><%= Capitol.find(@fisier.capitol_id).nume%></a></li>
    	<li class="active"><%= @fisier.name %></li>
	<% end %>
</ol>


<h1><%= @fisier.name %></h1>
<br/>

<!-- notificari -->
