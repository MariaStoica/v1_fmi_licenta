<h1>Arhiva Home</h1>

<% if @sesiuni.count == 0 %>
	There are no previous sessions.
<% else %>
	<!-- <ul> -->
	<table class="table table-striped table hover">
	<thead>
		<tr>
		<th class="col-sm-1">Nr.</th>
		<th>Sesiune</th>
		</tr>
	</thead>
	<tbody>
		<% nr = 0 %>
		<% @sesiuni.each do |sesiune| %>
			<% nr = nr + 1 %>
			<tr>
				<td><%= nr %></td>
				<td><%= link_to sesiune.data_start.strftime("%B %Y") + " - " + sesiune.data_start.strftime("%B") + " " + (sesiune.data_start.strftime("%Y").to_i + 1).to_s, browseHomeArhiva_path(sesiune_id: sesiune.id) %>
				</td>
			</tr>
		<% end %>
	</tbody>
	</table>
	<!-- </ul> -->
<% end %>